<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:voiceView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/smart_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/transparent"
            android:padding="12dp"
            android:src="@drawable/smart_back"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/smart_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="语音控制"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:layout_centerInParent="true"
            android:singleLine="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="8dp" >
        <ListView
            android:id="@+id/lv_chat_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#0000"
            android:dividerHeight="8dp"
            android:scrollbars="none" ></ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:padding="10dp"
        android:layout_weight="1.5">
        <com.cmri.moudleapp.moudlevoip.view.VoiceLineView
            android:id="@+id/voicLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            voiceView:maxVolume="50"
            voiceView:middleLine="@android:color/black"
            voiceView:middleLineHeight="0.01dp"
            voiceView:fineness="three"
            voiceView:rectSpace="2dp"
            voiceView:rectWidth="5dp"
            voiceView:sensibility="four"
            voiceView:viewMode="line"
            voiceView:lineSpeed="90"
            voiceView:voiceLine="#ff33b5e5"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3.5">
        <Button
            android:id="@+id/voice_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_startrecord"/>
    </RelativeLayout>
</LinearLayout>